function calculateFinalPrice(cart, vouchers):
    subtotal = sum(item.price * quantity)

    shopDiscount = applyShopVoucher(subtotal)
    afterShop = subtotal - shopDiscount

    platformDiscount = applyPlatformVoucher(afterShop)
    afterPlatform = afterShop - platformDiscount

    finalPrice = max(afterPlatform, 0)

    return finalPrice
