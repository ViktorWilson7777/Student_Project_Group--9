3. Java Code ‚Äì Sinh d·ªØ li·ªáu + c√†i l·ªói sai format
import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.FileOutputStream;
import java.time.LocalDateTime;
import java.util.Random;

public class FlashSaleDataGenerator {

    private static final int TOTAL_ROWS = 12000;

    public static void main(String[] args) throws Exception {
        Workbook workbook = new XSSFWorkbook();
        Sheet sheet = workbook.createSheet("Order_FlashSale_Raw");

        createHeader(sheet);
        generateData(sheet);

        try (FileOutputStream fos = new FileOutputStream("flashsale_orders_raw.xlsx")) {
            workbook.write(fos);
        }

        workbook.close();
        System.out.println("‚úÖ Generated flashsale_orders_raw.xlsx (" + TOTAL_ROWS + " rows)");
    }

    private static void createHeader(Sheet sheet) {
        Row header = sheet.createRow(0);
        String[] headers = {
                "order_id", "user_id", "shop_id", "product_id", "variant_id",
                "size", "color", "quantity", "unit_price",
                "voucher_code", "discount_value", "order_time", "order_status"
        };

        for (int i = 0; i < headers.length; i++) {
            header.createCell(i).setCellValue(headers[i]);
        }
    }

    private static void generateData(Sheet sheet) {
        Random random = new Random();

        for (int i = 1; i <= TOTAL_ROWS; i++) {
            Row row = sheet.createRow(i);

            Object quantity = random.nextInt(5) + 1;
            Object unitPrice = 10000 + random.nextInt(90000);
            Object discount = random.nextInt(30000);

            // ===== C√ÄI C·∫ÆM L·ªñI =====
            if (i % 50 == 0) quantity = -2;                  // s·ªë √¢m
            if (i % 77 == 0) quantity = "two";               // sai ki·ªÉu
            if (i % 90 == 0) unitPrice = "12O000";           // ch·ªØ O
            if (i % 120 == 0) discount = 999999;             // discount > subtotal
            if (i % 150 == 0) discount = null;               // null
            if (i % 200 == 0) unitPrice = "";                // tr·ªëng

            Object orderTime = LocalDateTime.of(
                    2025, 7, (i % 28) + 1, 10, 0).toString();
            if (i % 88 == 0) orderTime = "32/13/2025";       // sai format ng√†y

            Object status = switch (i % 3) {
                case 0 -> "PENDING";
                case 1 -> "PAID";
                default -> "CANCELLED";
            };
            if (i % 111 == 0) status = "SUCCESSFULL";        // sai enum

            Object size = new String[]{"S", "M", "L", "XL"}[i % 4];
            if (i % 95 == 0) size = 123;                     // sai ki·ªÉu

            Object color = new String[]{"Red", "Blue", "Black"}[i % 3];
            if (i % 130 == 0) color = null;                  // null

            Object voucher = (i % 4 == 0) ? "FS10K" : "";
            if (i % 170 == 0) voucher = "###";               // m√£ l·ªói

            writeCell(row, 0, "ORD" + (100000 + i));
            writeCell(row, 1, "U" + random.nextInt(3000));
            writeCell(row, 2, "S" + random.nextInt(200));
            writeCell(row, 3, "P" + random.nextInt(500));
            writeCell(row, 4, "V" + random.nextInt(2000));
            writeCell(row, 5, size);
            writeCell(row, 6, color);
            writeCell(row, 7, quantity);
            writeCell(row, 8, unitPrice);
            writeCell(row, 9, voucher);
            writeCell(row, 10, discount);
            writeCell(row, 11, orderTime);
            writeCell(row, 12, status);
        }
    }

    private static void writeCell(Row row, int col, Object value) {
        Cell cell = row.createCell(col);

        if (value == null) {
            cell.setBlank();
        } else if (value instanceof Number) {
            cell.setCellValue(((Number) value).doubleValue());
        } else {
            cell.setCellValue(value.toString());
        }
    }
}
