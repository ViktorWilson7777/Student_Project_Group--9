3. Excel Office Script (>10.000 d√≤ng)
üëâ D√°n v√†o Excel ‚Üí Automate ‚Üí Code Editor

function main(workbook: ExcelScript.Workbook) {
  let sheet = workbook.getWorksheet("Order_FlashSale_Raw");
  if (!sheet) {
    sheet = workbook.addWorksheet("Order_FlashSale_Raw");
  }

  // Header
  const headers = [
    "order_id", "user_id", "shop_id", "product_id", "variant_id",
    "size", "color", "quantity", "unit_price",
    "voucher_code", "discount_value", "order_time", "order_status"
  ];
  sheet.getRange("A1:M1").setValues([headers]);

  const rows: (string | number | null)[][] = [];
  const TOTAL_ROWS = 12000;

  for (let i = 1; i <= TOTAL_ROWS; i++) {
    let quantity: any = Math.floor(Math.random() * 5) + 1;
    let unitPrice: any = 10000 + Math.floor(Math.random() * 90000);
    let discount: any = Math.floor(Math.random() * 30000);

    // === C√ÄI C·∫ÆM L·ªñI ===
    if (i % 50 === 0) quantity = -2;                 // s·ªë √¢m
    if (i % 77 === 0) quantity = "two";              // sai ki·ªÉu
    if (i % 90 === 0) unitPrice = "12O000";          // ch·ªØ O
    if (i % 120 === 0) discount = unitPrice * 5;     // discount > t·ªïng ti·ªÅn
    if (i % 150 === 0) discount = null;              // null
    if (i % 200 === 0) unitPrice = "";               // tr·ªëng

    let orderTime: any = `2025-07-${(i % 30) + 1} 10:00:00`;
    if (i % 88 === 0) orderTime = "32/13/2025";      // sai ng√†y

    let status: any = ["PENDING", "PAID", "CANCELLED"][i % 3];
    if (i % 111 === 0) status = "SUCCESSFULL";       // sai enum

    let size: any = ["S", "M", "L", "XL"][i % 4];
    if (i % 95 === 0) size = 123;                    // sai ki·ªÉu

    let color: any = ["Red", "Blue", "Black"][i % 3];
    if (i % 130 === 0) color = null;                 // null

    let voucher: any = i % 4 === 0 ? "FS10K" : "";
    if (i % 170 === 0) voucher = "###";              // m√£ l·ªói

    rows.push([
      `ORD${100000 + i}`,
      `U${Math.floor(Math.random() * 3000)}`,
      `S${Math.floor(Math.random() * 200)}`,
      `P${Math.floor(Math.random() * 500)}`,
      `V${Math.floor(Math.random() * 2000)}`,
      size,
      color,
      quantity,
      unitPrice,
      voucher,
      discount,
      orderTime,
      status
    ]);
  }

  sheet.getRange(`A2:M${TOTAL_ROWS + 1}`).setValues(rows);
}
